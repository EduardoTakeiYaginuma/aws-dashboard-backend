generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  workspaces Workspace[]
}

model Workspace {
  id           String   @id @default(uuid())
  name         String
  roleArn      String
  awsAccountId String
  status       String   @default("pending") // pending | connected | error
  userId       String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user            User             @relation(fields: [userId], references: [id])
  recommendations Recommendation[]
  jobRuns         JobRun[]
  resources       Resource[]

  @@index([userId])
}

model Recommendation {
  id                      String   @id @default(uuid())
  workspaceId             String
  type                    String   // EC2_DOWN_SIZE, EBS_ORPHAN, S3_LIFECYCLE, RDS_DOWN_SIZE
  resourceId              String
  description             String
  estimatedMonthlySavings Float
  confidence              String   // low | medium | high
  status                  String   @default("new") // new | acknowledged | dismissed
  metadata                Json?
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  workspace Workspace @relation(fields: [workspaceId], references: [id])

  @@unique([workspaceId, resourceId, type])
  @@index([workspaceId])
  @@index([status])
}

model JobRun {
  id                   String   @id @default(uuid())
  workspaceId          String
  status               String   // running | completed | failed
  recommendationsFound Int      @default(0)
  errorMessage         String?
  startedAt            DateTime @default(now())
  completedAt          DateTime?

  workspace Workspace @relation(fields: [workspaceId], references: [id])

  @@index([workspaceId])
}

model Resource {
  id                   String   @id @default(uuid())
  workspaceId          String
  resourceId           String   // ex: i-123abc, vol-...
  arn                  String?  // opcional
  service              String   // ex: EC2, S3, RDS, EBS
  type                 String?  // ex: t3.micro, volume, bucket
  name                 String?  // se dispon√≠vel (tag Name)
  tags                 Json?    // JSONB com tags
  metadata             Json?    // JSONB com detalhes extras (IPs, configs, etc)
  state                String?  // ex: running, stopped
  lastSeenAt           DateTime @default(now())
  estimatedMonthlyCost Float?   // USD
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  workspace Workspace @relation(fields: [workspaceId], references: [id])
  @@index([workspaceId])
  @@index([service])
  @@unique([workspaceId, resourceId])
}

model Analytics {
  id        String   @id @default(uuid())
  visitorId String
  event     String   // page_view | click_free_test | view_instructions | click_connect | connect_success | connect_error
  metadata  Json?
  userAgent String?
  referrer  String?
  createdAt DateTime @default(now())

  @@index([event])
  @@index([visitorId])
  @@index([createdAt])
}
